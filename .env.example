# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.northharbor.ai
AUTH0_ALGORITHMS=RS256

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=northharbor_ai

# OpenAI (for AI modules -- not needed for Phase 0)
# OPENAI_API_KEY=sk-...

# LLM (local default: Ollama)
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1:8b-instruct-q4_K_M
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT_SECONDS=120

# OpenAI (optional alternative to local Ollama)
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# NORTHHARBOR_OPENAPI_KEY=sk-...
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_TIMEOUT_SECONDS=45

# App
APP_ENV=development
LOG_LEVEL=info
